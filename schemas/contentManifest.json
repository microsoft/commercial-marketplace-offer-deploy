{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Artifacts content manifest file schema",
  "type": "object",
  "properties": {
    "deploymentType": {
      "type": "string"
    },
    "mainTemplate": {
      "type": "string"
    },
    "offer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    }
  },
  "required": [
    "deploymentType",
    "mainTemplate",
    "offer"
  ]
}