    "version": "0.2.0",
    "configurations": [
        {
            "name": "Api",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/cmd/apiserver/main.go",
            "dlvLoadConfig":{
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 512, 
                "maxArrayValues": 64,
                "maxStructFields": -1
              },
            "dlvFlags": ["--check-go-version=false"]
        },
        {
            "name": "Operator",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/cmd/operator/main.go",
            "dlvLoadConfig":{
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 512, 
                "maxArrayValues": 64,
                "maxStructFields": -1
              },
            "dlvFlags": ["--check-go-version=false"]
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        }
    ]
}